<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/xSmall"
    android:paddingLeft="@dimen/small"
    android:paddingRight="@dimen/small"
    android:paddingTop="@dimen/xSmall">

    <TextView
        android:id="@+id/message_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/avatarView"
        android:layout_toEndOf="@+id/avatarView"
        android:background="@drawable/message_in"
        android:gravity="center_vertical"
        android:text="test messages" />

    <com.kickbackapps.ghostcall.customview.CircularImageView
        android:id="@+id/avatarView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/people_gray"
        app:border_color="@color/divider"
        app:border_width="1dp" />

    <TextView
        android:id="@+id/date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_view"
        android:layout_toRightOf="@+id/avatarView"
        android:layout_toEndOf="@+id/avatarView"
        android:singleLine="true"
        android:text="Aug 22, 01:30 AM"
        android:textColor="@color/divider" />

</RelativeLayout>