                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/darker_gray" />

                    <RelativeLayout
                        android:id="@+id/rel_lite_ghost_4"
