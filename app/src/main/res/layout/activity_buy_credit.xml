<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_cr_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/small">

                <TextView
                    android:id="@+id/tv_you_have"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="You have "
                    android:textColor="@color/txt_light" />

                <TextView
                    android:id="@+id/tv_credit_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 "
                    android:textColor="@color/txt_dark" />

                <TextView
                    android:id="@+id/tv_credits_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="credits left "
                    android:textColor="@color/txt_light" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_cr_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/xLarge"
                android:paddingRight="@dimen/xLarge">

                <Button
                    android:id="@+id/btn_buy_credits"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_background_red"
                    android:text="BUY CREDITS"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="@dimen/small"
                    android:layout_height="10dp" />

                <Button
                    android:id="@+id/btn_extend_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_background_green"
                    android:text="EXTEND NUMBER"
                    android:textColor="@color/white" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/small" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
