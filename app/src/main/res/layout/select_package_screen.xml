<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dae4eb"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cvSelectLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/xSmall">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/small" />

            <TextView
                android:id="@+id/selectLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/xLarge"
                android:text="Select a number package"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/small" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ListView
        android:id="@+id/packageListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="12dp"
        android:divider="#dae4eb"
        android:paddingLeft="@dimen/xLarge"
        android:paddingRight="@dimen/xLarge">

    </ListView>

</LinearLayout>
