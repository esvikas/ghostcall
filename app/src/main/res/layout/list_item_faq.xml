<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/xLarge"
        android:paddingRight="@dimen/xLarge"
        android:paddingTop="@dimen/xLarge"
        android:text="Q"
        android:textColor="@color/bg_register_dark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tv1"
        android:layout_toRightOf="@+id/tv1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/xLarge"
        android:paddingRight="@dimen/xLarge"
        android:paddingTop="@dimen/xLarge">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Number"
            android:textColor="@color/txt_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1"
            android:text="My Number"
            android:textColor="@color/txt_light"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/xLarge"
            android:background="@color/keypad_light_gray" />

    </LinearLayout>

</RelativeLayout>